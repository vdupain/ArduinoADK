<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <Switch
            android:id="@+id/switchRCClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rcclient"/>

    <com.company.android.arduinoadk.IPWebCamWebView
            android:id="@+id/ipWebcamWebview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            />

    <com.company.android.arduinoadk.joystick.DualJoystickView
            android:id="@+id/dualjoystickView"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dip"
            android:layout_width="fill_parent"
            android:layout_height="175dip"/>

    <TableLayout
            android:id="@+id/table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dip">

        <TableRow>

            <TextView
                    android:text="X"
                    android:layout_width="50dip"
                    android:layout_height="wrap_content"></TextView>

            <TextView
                    android:text=""
                    android:id="@+id/TextViewX1"
                    android:layout_width="150dip"
                    android:layout_height="wrap_content"></TextView>

            <TextView
                    android:text="X"
                    android:layout_width="50dip"
                    android:layout_height="wrap_content"></TextView>

            <TextView
                    android:text=""
                    android:id="@+id/TextViewX2"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"></TextView>
        </TableRow>

        <TableRow>

            <TextView
                    android:text="Y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

            <TextView
                    android:text=""
                    android:id="@+id/TextViewY1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

            <TextView
                    android:text="Y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

            <TextView
                    android:text=""
                    android:id="@+id/TextViewY2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
        </TableRow>
    </TableLayout>

    <com.company.android.arduinoadk.ConsoleView
            android:id="@+id/consoleClient"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/table"
            android:gravity="top"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:textColor="@color/orange"/>

</LinearLayout>
